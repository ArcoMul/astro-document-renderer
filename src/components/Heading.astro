---
import DocumentRenderer from "../../src/DocumentRenderer.astro";

interface Props {
  textAlign: string;
  level: number;
  children: any[];
  documentRendererProps: any;
}

const { textAlign, level, children, documentRendererProps } = Astro.props;

const Element = `h${level}`;
---

<Element style={textAlign ? { textAlign } : undefined}
  ><DocumentRenderer document={children} {...documentRendererProps} /></Element
>
